<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/sample2"
    app:motionDebug="SHOW_PATH"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/android_icon_blue" />

    <ImageView
        android:id="@+id/icon_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/android_icon_orange" />

    <ImageView
        android:id="@+id/icon_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/android_icon_purple" />


</androidx.constraintlayout.motion.widget.MotionLayout>